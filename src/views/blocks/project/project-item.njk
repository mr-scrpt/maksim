<div class="project-item project__item">
	<div class="project-item__inner">
		<div class="project-item__img-box">
			<img src="./img/project/project_{{loop.index}}.jpg" alt="{{item.title}}" class="project-item__img">
		</div>
		<div class="project-item__body">
			<div class="project-item__title">{{item.title}}</div>
			<div class="project-item__text">{{item.text.slice(1, 120)}}</div>
			<div class="project-item__more">
				<a href="#" class="project-item__link link">Дивитись</a>
				<div class="icon icon_arrow_long"></div>
			</div>
		</div>
	</div>
</div>